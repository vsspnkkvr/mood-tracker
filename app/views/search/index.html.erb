<div class= "bg-dark>
<%= render 'search/form'%>
<h3 class= "mt-3"><%= pluralize(@days.count, "Result") %></h3>

<div class="container mt-4">
    <table class="table table-dark table-striped">
        <thead>
            <tr>
            <th><%= sort_link(@query, :mooddate, "Date", default_order: :mooddate) %></th>
            <th><%= sort_link(@query, :moodword, "Word") %></th>
            <th><%= sort_link(@query, :moodjournal, "Description") %></th>
            <th><%= sort_link(@query, :moodrating, "Rating") %></th>
            </tr>
        </thead>  
    <tbody>
        <% @days.each do |day| %>
        <tr>
            <td><%= link_to day.mooddate, day %></td>
            <td><%= day.moodword %></td>
            <td><%= day.moodjournal.truncate_words(25) %></td>
            <td><%= day.moodrating %></td>
        </tr>
        <% end %>
    </tbody>
    </table>
</div>

