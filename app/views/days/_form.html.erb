<%= form_with(model: day) do |form| %>
  <% if day.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(day.errors.count, "error") %> prohibited this day from being saved:</h2>

      <ul>
        <% day.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form">
    <%= form.label :mooddate, "Date: "%>
  </div>

  <div class="form">
    <%= form.date_field :mooddate %>

  <div class="form">
    <%= form.label :moodrating, "Rating from -5 - 5: "%>
  </div>
  
  <div class="form">
    <%= form.number_field :moodrating %>
  </div>

  <div class="form">
    <%= form.label :moodjournal, "Describe your day: "%>
  </div>

  <div class="form">
    <%= form.text_area :moodjournal %>
  </div>

  <div class="form">
    <%= form.label :moodword, "Describe your day in one word: "%>
  </div>

  <div class="form">
    <%= form.text_field :moodword %>
  </div>
  
  <div class="form">
    <%= form.submit %>
  </div>

<% end %>
